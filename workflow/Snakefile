rule make_tf_tensors:
    input:
        infile="resources/experimentList_{genome}_TFs_only_QC_filtered.tab",# only for dependency
        exp_list=get_experiments
    output:
        tensor='results/TF_tensors/{genome}/{tf}.hdf5'
        failed='results/TF_tensors/{genome}/{tf}_failed.txt'
    params:
        window_kb=config['Window_kb'],
        bin_size=config['bin_size']
    shell:
        """
        python scripts/make_chip_promoter_experiment_tensors.py --tf {wildcards.tf} --genome {wildcards.genome} --window_kb {params.window_kb} --bin_size {params.bin_size} --outfile {output.tensor} --outfile_failed {output.failed} --infiles_tf {input.exp_list}
        """

rule svd:
    input:
        tensor='results/TF_tensors/{genome}/{tf}.hdf5'
        failed='results/TF_tensors/{genome}/{tf}_failed.txt'
    output:
        U='results/svd/{genome}/{tf}_U.npy',
        S='results/svd/{genome}/{tf}_S.npy',
        Vh='results/svd/{genome}/{tf}_Vh.npy',
        rho='results/corr/{genome}/{tf}_rho.npy'
    shell:
        """
        python scripts/get_Chip_svd.py --tf {wildcards.tf} --infile_tensor {input.tensor} --infile_failed {input.failed} --outfile_U {output.U} --outfile_S {output.S} --outfile_Vh {output.Vh} --outfile_rho {output.rho}
        """

rule plot_svd:
    input:
        U='results/svd/{genome}/{tf}_U.npy',
        S='results/svd/{genome}/{tf}_S.npy',
        Vh='results/svd/{genome}/{tf}_Vh.npy',
        rho='results/corr/{genome}/{tf}_rho.npy'
    output:
        'results/fig/svd/{genome}/{tf}.pdf'
    shell:
        """
        python scripts/plot_svd_per_tf.py --tf {wildcards.tf} --infile_U {input.U} --infile_S {input.S} --infile_Vh {input.Vh} --infile_rho {input.rho} --outfig {output}
        """

